{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2022"],
    "paths": {
      "@app/*": ["./src/app/*"],
      "@config": ["./src/config"],
      "@utils": ["./src/utils"],
      "@/*": ["./src/*"]
    }
  }
}
