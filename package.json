{
  "name": "txjs",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "lint": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,json,js}\"",
    "tsoa:spec": "tsoa spec",
    "tsoa:routes": "tsoa routes",
    "tsoa": "tsoa spec && tsoa routes",
    "dev": "npm-run-all tsoa --parallel *:dev",
    "prebuild": "rimraf dist",
    "build": "yarn tsoa && node esbuild.config.js --build",
    "build:dev": "node esbuild.config.js --dev",
    "start:dev": "node --watch dist/main.js",
    "start": "node dist/main.js"
  },
  "engines": {
    "node": ">=20.x"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "mongoose": "^8.5.2",
    "pino": "^9.3.2",
    "pino-http": "^10.2.0",
    "pino-pretty": "^11.2.2",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/node": "^22.0.2",
    "@types/pino": "^7.0.5",
    "@types/pino-http": "^5.8.4",
    "@types/pino-pretty": "^5.0.0",
    "@types/swagger-ui-express": "^4.1.6",
    "esbuild": "^0.23.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1"
  }
}
